<Window x:Class="Scin_Beauty.form.buyProduct"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Scin_Beauty.form"
        mc:Ignorable="d"
        Title="Покупка товара" MinHeight="500" MinWidth="800">
    <Grid Background="#FFA24529">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.05*"></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition Width="0.05*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.05*"></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="0.05*"></RowDefinition>
        </Grid.RowDefinitions>
        <ScrollViewer ScrollViewer.VerticalScrollBarVisibility="Hidden" Grid.Column="1" Grid.Row="1">
            <StackPanel  Grid.Column="1" Grid.Row="1" Background="White">
                <Grid>
                    <Image x:Name="exitHime" Margin="10,0,0,0" Source="/Scin_Beauty;component/icon/left.png" Width="40" HorizontalAlignment="Left" MouseLeftButtonDown="exitHime_MouseLeftButtonDown"></Image>
                    <Label 
                    Content="Покупка товара"
                    FontSize="24"
                    FontFamily="Halant" 
                    FontWeight="Normal"
                    Foreground="#FFA24529"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Margin="0,10,0,0"></Label>
                </Grid>
                <DockPanel Margin="10">
                    <Label
                        Content="Клиент"
                        FontFamily="Halant"
                        FontSize="16"
                        Margin="10,0,0,0"
                        Width="150" FontWeight="Medium"></Label>
                    <ComboBox
                        x:Name="statusClient"       
                        Height="40"
                        MinWidth="300"
                        FontFamily="Tahoma"
                        FontSize="18"
                        BorderBrush="#FFA24529" SelectionChanged="statusClientProduct_SelectionChanged">
                    </ComboBox>
                </DockPanel>
                <DockPanel x:Name="FIO" Visibility="Collapsed" Margin="10" >
                    <Label
                        Content="ФИО"
                        FontFamily="Halant"
                        FontSize="16"
                        Width="150"
                        Margin="10,0,0,0" FontWeight="Medium"></Label>
                    <ComboBox
                        x:Name="nameClient"
                        FontFamily="Tahoma"
                        FontSize="18"
                        Height="40"
                        MinWidth="300"
                        BorderBrush="#FFA24529" SelectionChanged="nameClient_SelectionChanged">
                    </ComboBox>
                </DockPanel>

                <DockPanel Visibility="Collapsed" x:Name="newClient">
                    <DockPanel DockPanel.Dock="Top" Margin="10" >
                        <Label
                        Content="Имя"
                        FontFamily="Halant"
                        FontSize="16"
                        Margin="10,0,0,0"
                        Width="150" FontWeight="Medium"></Label>
                        <TextBox
                        x:Name="FirstNameClient"       
                        Height="40"
                        MinWidth="300"
                        FontFamily="Tahoma"
                        FontSize="18"
                        BorderBrush="#FFA24529">
                        </TextBox>
                    </DockPanel>
                    <DockPanel DockPanel.Dock="Top" Margin="10" >
                        <Label
                        Content="Фамилия"
                        FontFamily="Halant"
                        FontSize="16"
                        Margin="10,0,0,0"
                        Width="150" FontWeight="Medium"></Label>
                        <TextBox
                        x:Name="MiddleNameClient"       
                        Height="40"
                        MinWidth="300"
                        FontFamily="Tahoma"
                        FontSize="18"
                        BorderBrush="#FFA24529">
                        </TextBox>
                    </DockPanel>
                    <DockPanel DockPanel.Dock="Top" Margin="10" >
                        <Label
                        Content="Отчество"
                        FontFamily="Halant"
                        FontSize="16"
                        Margin="10,0,0,0"
                        Width="150" FontWeight="Medium"></Label>
                        <TextBox
                        x:Name="LastNameClient"       
                        Height="40"
                        MinWidth="300"
                        FontFamily="Tahoma"
                        FontSize="18"
                        BorderBrush="#FFA24529">
                        </TextBox>
                    </DockPanel>
                    <DockPanel DockPanel.Dock="Top" Margin="10" >
                        <Label
                        Content="Номер телефона"
                        FontFamily="Halant"
                        FontSize="16"
                        Margin="10,0,0,0"
                        Width="150" FontWeight="Medium"></Label>
                        <TextBox
                            
                        x:Name="PhoneNumberClient"       
                        Height="40"
                        MinWidth="300"
                        FontFamily="Tahoma"
                        FontSize="18"
                        BorderBrush="#FFA24529" PreviewTextInput="PhoneNumberClient_PreviewTextInput" >
                        </TextBox>
                    </DockPanel>
                    <DockPanel DockPanel.Dock="Top" Margin="10" >
                        <Label
                        Content="Email"
                        FontFamily="Halant"
                        FontSize="16"
                        Margin="10,0,0,0"
                        Width="150" FontWeight="Medium"></Label>
                        <TextBox
                        x:Name="EmailClient"       
                        Height="40"
                        MinWidth="300"
                        FontFamily="Tahoma"
                        FontSize="18"
                        BorderBrush="#FFA24529" >
                        </TextBox>
                    </DockPanel>

                </DockPanel>


                <DockPanel Margin="10">
                    <Label
                        Content="Товар"
                        FontFamily="Halant"
                        FontSize="16"
                        Width="150"
                        Margin="10,0,0,0" FontWeight="Medium"></Label>
                    <ComboBox
                        x:Name="nameBuyProduct"
                        FontFamily="Tahoma"
                        FontSize="18"
                        Height="40"
                        MinWidth="300"
                        BorderBrush="#FFA24529" SelectionChanged="nameBuyProduct_SelectionChanged">
                    </ComboBox>
                </DockPanel>
                <DockPanel Margin="10">
                    <Label
                        Content="Количество"
                        FontFamily="Halant"
                        FontSize="16"
                        Width="150"
                        Margin="10,0,0,0" FontWeight="Medium"></Label>
                    <TextBox
                        x:Name="countProduct"
                        FontFamily="Tahoma"
                        FontSize="18"
                        Height="40"
                        MinWidth="300"
                        BorderBrush="#FFA24529" PreviewTextInput="countProduct_PreviewTextInput">
                    </TextBox>
                </DockPanel>
                <Button
                    x:Name="saveRecord"
                    Content="Сохранитьт"
                    Background="Transparent"
                    FontSize="24"
                    FontFamily="Halant" 
                    FontWeight="Normal"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    Foreground="Black"
                    BorderBrush="#FFA24529" 
                    Width="120" 
                    Height="45"
                    Margin="0,5,0,0" Click="saveRecord_Click_1"
                    ></Button>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
